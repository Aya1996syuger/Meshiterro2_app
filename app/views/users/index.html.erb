 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
   <%= render 'books/list', book: @book, user: @user %>
   </div>

   <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
     <table class = "table">
      <thead>
     　<tr>
      　<th>image</th>
   　    <th>name</th>
   　    <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <tr>
        <% @users.each do |user| %>
         <td><%= image_tag('no_image.jpg') %></td>
         <td><%= user.name %></td>
         <td><%= link_to "show",user_path(user)%></td>
        <% end %>
       </tr>
      </tbody>
     </table>
