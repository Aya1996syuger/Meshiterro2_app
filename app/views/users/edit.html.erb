<%= form_with model:@user , local:true do |f| %>

  <h6>Name</h6>
  <%= f.text_field :name %></br>

  <h6>Image</h6>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></br>

  <h6>Introduction</h6>
  <%= f.text_area :introduction %></br>
  <%= f.submit 'Update User' %>
<% end %>