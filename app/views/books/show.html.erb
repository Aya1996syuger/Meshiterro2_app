<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
     <%= value %>
    </div>
<% end %>

<div class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render 'books/list', book: @book, user: @user %>
  </div>

  <div class="col-md-8 offset-md-1">
   <h2>Books detail</h2>
    <table class="table">
     <tbody>
      <tr>
       <td><%= image_tag('no_image.jpg') %></td>
       <td><%= @books.title %></td>
       <td><%= @books.body %></td>
       <td><%= @books.user.name %></td>
       <% if @books.user == current_user %>
       <% end %>
         <td><%= link_to "Edit",edit_book_path, class: "btn btn-secondary" %></td>
         <td><%= link_to "Destroy", book_path, class: "btn btn-secondary" , method: :delete %></td>
  　　　</tr>
 　　　</tbody>
　　</table>
　 </div>
 </div>
</div>


