<% flash.each do |key, value| %>
    <p class="alert alert-<%= key %>">
      <%= value %>
    </p>
<% end %>
 <%= render 'books/list', book: @book, user: @user %>
<h1>Books detail</h1>
<table>
 <tbody>
  <tr>
  <td><%= image_tag('no_image.jpg') %></td>
  <td><%= @books.title %></td>
  <td><%= @books.body %></td>
  <td><%= @books.user.name %></td>
   <% if @books.user == current_user %>
   <% end %>
   <td><%= link_to "Edit",edit_book_path(@books)%></td>
