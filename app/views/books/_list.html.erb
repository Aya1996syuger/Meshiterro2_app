<% books.each do |book| %>  <!-- @post_images → post_images -->
<div>
<h1>User info</h1>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <% if user.id == current_user.id %>
  <h3><%= user.name %></h3>
  <h3><%= user.introduction %></h3>
    <p><%= link_to "設定", edit_user_path(user) %></p>
  <% end %>
</div>

<h2>New book<h2>
        <%= form_with model: book, local: true do |f| %>
  　　　　　<div class="form-group">
    　 　　<%= f.label :title %><br>
         <%= f.text_field :title, class: "form-control" %>
         </div>
         <div class="form-group">
         <label>Opinion</label><br>
         <%= f.text_area :body, class: "form-control" %>
       </div>
       <div class="form-group">
         <%= f.submit "Create Book", class: "btn btn-success" %>
       </div>
         <% end %>
         </div>

         <div class="col-lg-">

         <h2>Books</h2>
          <table>
           <thead>
          　<tr>
           　<th>Title</th>
           　<th>Body</th>
           　<th colspan="3"></th>
            </tr>
           </thead>
         <tbody>
            <% books.each do |book| %>
              <tr>
              <td><%= image_tag('no_image.jpg') %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            <% end %>
              </tr>
            </table>
            </div>

            <%= paginate books %>  <!-- @post_images → post_images -->