<html>
  <head>
    <title>Bookers2</title>
  </head>

  <body>
   <main>
    <h2>User info<h2>
      <table>

        <h2>New book</h2>
         <%= form_with model: @books, local:true do |f| %>
        <h4>Title</h4>
         <%= f.text_field :title %>
        <h4>opinion</h4>
         <%= f.text_area :body%>
         <%= f.submit 'Create Book' %>
        <% end %>



     <h2>Books</h2>
       <table>
         <thead>
          <tr>
           <% @book.each do |book| %>
            <th>写真</th>
            <th>Title</th>
         　<th>Opion</th>
         　<th colspan="3"></th>
         </tr>
        </thead>
       <tbody>
           <%= link_to book_path(book.id) do %>
           <% end %>
       <td><%= image_tag('no_image.jpg') %></td>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       </tr>
      <% end %>
      </main>
    </body>
</html>